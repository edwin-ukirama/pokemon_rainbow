<%= render 'layouts/breadcrumbs' %>

<div class="d-flex align-items-center justify-content-between">
  <h1>Battle Logs</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Attacker</th>
      <th>Defender</th>
      <th>Turn</th>
      <th>Skill</th>
      <th>Message</th>
      <th>Defender Current HP</th>
      <th>Damage</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td>
          <a href="<%= pokemon_path(log.attacker) %>">
            <%= log.attacker.name %>
          </a>
        </td>

        <td>
          <a href="<%= pokemon_path(log.defender) %>">
            <%= log.defender.name %>
          </a>
        </td>
        <td>
          <%= log.turn %>
        </td>
        <td>
          <% if log.skill.present? %>
            <%= log.skill.name.titleize %>
          <% end %>
        </td>
        <td>
          <%= log.message %>
        </td>

        <td>
          <%= log.defender_current_health_point %>
        </td>
        <td>
          <%= log.damage %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
